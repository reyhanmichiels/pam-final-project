<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="23dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:strokeColor="#75000000"
        app:strokeWidth="1dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="0dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/btn_add">

            <TextView
                android:id="@+id/tv_title_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:paddingLeft="24dp"
                android:paddingTop="15dp"
                android:paddingBottom="0dp"
                android:text="Title Task"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_description_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title_item"
                android:fontFamily="@font/poppins_medium"
                android:paddingLeft="24dp"
                android:paddingTop="0dp"
                android:paddingBottom="15dp"
                android:text="Description "
                android:textSize="13sp" />

            <Button
                android:id="@+id/btn_delete_item"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="26dp"
                android:layout_marginTop="20dp"
                android:background="#00FFFFFF"
               />

            <ImageView
                android:id="@+id/trash_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/btn_delete_item"
                android:layout_alignBottom="@id/btn_delete_item"
                android:layout_alignStart="@id/btn_delete_item"
                android:layout_alignEnd="@id/btn_delete_item"
                app:srcCompat="@drawable/trash" />
